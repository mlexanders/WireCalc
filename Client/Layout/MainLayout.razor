@inherits LayoutComponentBase
<RadzenComponents/>

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End"></RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.png" style="width: 48px; height: 48px;"></RadzenImage>
            <RadzenText Text="WireCalc" TextStyle="TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-sidebar-color);"/>
        </RadzenStack>


        <RadzenPanelMenu>

            <RadzenPanelMenuItem Icon="home" Text="Главная" Path=""/>

            <RadzenPanelMenuItem Icon="fingerprint" IconColor="@Colors.Secondary" Text="Расчет параметров схемы замещения">
                <RadzenPanelMenuItem Text="Воздушная линия" Path="/airLine"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Кабельная линия" Path="/cableLine"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Трансформатор, автотрансформатор двухобмоточные" Path="/line1"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Трансформатор, автотрансформатор трёхобмоточные" Path="/line2"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Icon="fingerprint" IconColor="@Colors.Secondary" Text="Расчет потерь напряжения в ВЛ">
                <RadzenPanelMenuItem Text="Расчет через нагрузки" Path="/voltageLoosesLoad"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Расчет через мощность" Path="/voltageLoosesPower"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Icon="fingerprint" IconColor="@Colors.Secondary" Text="Расчет потерь мощности">
                <RadzenPanelMenuItem Text="Воздушная линия" Path="/PowerLosses?CableLineTypeParam=1"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Кабельная линия" Path="/PowerLosses?CableLineTypeParam=2"></RadzenPanelMenuItem>
                @* <RadzenPanelMenuItem Text="Трансформатор" Path="/userList3"></RadzenPanelMenuItem> *@
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Icon="fingerprint" IconColor="@Colors.DangerDark" Text="Расчет потерь энергии">
                <RadzenPanelMenuItem Text="Воздушная линия" Path="/userList11"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Кабельная линия" Path="/userList22"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Трансформатор" Path="/userList33"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Icon="fingerprint" IconColor="@Colors.DangerDark" Text="Расчет кольцевых линий"></RadzenPanelMenuItem>
        </RadzenPanelMenu>


        <RadzenStack AlignItems="AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="WireCalc v2.0.0" TextStyle="TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="TagName.P" TextAlign="TextAlign.Center"/>
            <RadzenText Text="Copyright Ⓒ 2024" TextStyle="TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="TagName.P" TextAlign="TextAlign.Center"/>
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>